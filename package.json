{
  "name": "node-starter",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "watch": "npm run clean && npm run babel:watch",
    "_watch": "npm run clean && npm run babel:watch & npm run prettier:watch",
    "build": "npm run clean && npm run babel",
    "dev": "node --stack-size=1024 --stack_trace_limit=1000 -r trace -r clarify -r source-map-support/register -r babel-polyfill -r dotenv/config -r hard-rejection/register -r ./src/_bootstrap",
    "start": "cross-env NODE_ENV=production node --stack-size=1024 --stack_trace_limit=1000 -r source-map-support/register -r babel-polyfill -r dotenv/config -r hard-rejection/register -r ./src/_bootstrap",
    "clean": "rm -rf dist && mkdir dist",
    "babel": "babel src --out-dir dist --copy-files --source-maps",
    "babel:watch": "babel src --out-dir dist --copy-files --source-maps --watch",
    "prettier": "prettier src/**/*.* --write",
    "prettier:watch": "onchange \"src/**/*.{js,json}\" -- prettier --write {{changed}}",
    "test": "echo \"Error: no test specified\" && exit 0",
    "*test": "mocha --compilers js:babel-register",
    "lint": "eslint ./src --quiet",
    "postcommit": "git update-index --again"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [],
  "author": "antixrist",
  "private": true,
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-syntax-trailing-function-commas": "^6.22.0",
    "babel-plugin-transform-async-generator-functions": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-exponentiation-operator": "^6.24.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "cross-env": "^5.1.3",
    "dotenv": "^6.0.0",
    "hard-rejection": "^1.0.0",
    "signal-exit": "^3.0.2",
    "source-map-support": "^0.5.6"
  },
  "devDependencies": {
    "clarify": "^2.1.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-plugin-import": "^2.12.0",
    "husky": "^1.0.0-rc.8",
    "lint-staged": "^7.1.3",
    "onchange": "^4.0.0",
    "prettier": "^1.13.5",
    "trace": "^3.1.0"
  }
}
